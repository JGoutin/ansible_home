# Disable the bar and windows borders
bar {
    mode invisible
}
default_border none

{% if kodi_wayland_output is defined %}output {{ kodi_wayland_output }}{% if kodi_wayland_output_mode is defined %} mode {{ kodi_wayland_output_mode }}{% endif %}{% endif %}

# Start Kodi on Sway start and exit Sway on music player exit
exec swaymsg -t get_outputs && /usr/bin/kodi-standalone && /usr/bin/swaymsg exit
